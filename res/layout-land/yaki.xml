<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:id="@+id/yaki_birthday"
	android:padding="10dip" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:layout_gravity="center_horizontal">

	<LinearLayout android:id="@+id/LinearLayout03"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<ImageView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/yaki"
			android:src="@drawable/yaki" />
		<LinearLayout android:id="@+id/LinearLayout02"
			android:orientation="vertical" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textSize="18.0sp"
				android:text="　アプリ作者：＠yakisoba_yuki" />
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textSize="14.0sp"
				android:text="　　　　　　　　　　　　　(twitterID)" />
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textSize="14.0sp"
				android:text="" />
		</LinearLayout>
	</LinearLayout>

	<LinearLayout android:id="@+id/LinearLayout01"
		android:orientation="vertical" android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textSize="14.0sp"
			android:text="12月1日は、アプリ作者の誕生日です。" />
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textSize="14.0sp"
			android:text="誕生日を祝福されると照れます。(*´ω｀*)" />
	</LinearLayout>



</LinearLayout>